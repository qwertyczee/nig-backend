{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/src/index.ts" },
    { "source": "/admin/(.*)", "destination": "/src/index.ts" },
    { "source": "/admin", "destination": "/src/index.ts" }
  ]
}